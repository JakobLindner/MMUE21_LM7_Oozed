<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MMUELM7" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Default text -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearanceLarge">@style/Theme.MMUELM7.Heading</item>

        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Theme.MMUELM7.Fullscreen" parent="Theme.MMUELM7">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ThemeOverlay.MMUELM7.FullscreenContainer" parent="Theme.MMUELM7.Fullscreen">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.MMUELM7.Heading" parent="TextAppearance.MaterialComponents.Headline3">
    </style>
    <style name="Theme.MMUELM7.Heading2" parent="TextAppearance.MaterialComponents.Headline5">
    </style>
</resources>